{
  "compilerOptions": {
    "types": [
      "bun-types",
      "@types/web"
    ],
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUncheckedIndexedAccess": true,
    "declarationDir": "dist",
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "declarationMap": true,
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
